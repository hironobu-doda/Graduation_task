    <div class="field">
      <%= form.label :after_content %>
      <p><%= form.text_area :after_content, size: "50x6" %></p>
    </div>

    <div class="field">
      <%= form.label :after_point %>
      <p><%= form.number_field :after_point, min: 0, max: 100 %></p>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
