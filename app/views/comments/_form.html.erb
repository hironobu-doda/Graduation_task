<% comment.date = creation_date.date %>

<%= form_with(model: [creation_date, comment]) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :before_content %>
    <%= form.text_area :before_content, size: "100x5" %>
  </div>

  <div class="field">
    <%= form.label :before_point %>
    <%= form.number_field :before_point %>
  </div>

  <div class="field">
    <%= form.label :after_content %>
    <%= form.text_area :after_content, size: "100x5" %>
  </div>

  <div class="field">
    <%= form.label :after_point %>
    <%= form.number_field :after_point %>
  </div>

  <div class="field">
    <%= form.hidden_field :date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
